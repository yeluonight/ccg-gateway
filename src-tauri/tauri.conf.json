{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CCG Gateway",
  "identifier": "com.ccg.gateway",
  "version": "0.1.0",
  "build": {
    "devUrl": "http://localhost:7786",
    "beforeBuildCommand": "scripts\\build-frontend.bat",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "CCG Gateway",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
